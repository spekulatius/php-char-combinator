{
    "name": "spekulatius/php-char-combinator",
    "description": "An extentable, dynamic character-list generator for PHP.",
    "keywords": ["php", "infosec", "brute-forcing"],
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Thaleikis",
            "homepage": "https://releasecandidate.dev"
        }
    ],
    "require": {
        "php": "^8.2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.10.1",
        "pestphp/pest": "^2.6.3",
        "phpstan/phpstan": "^1.10.18",
        "rector/rector": "^0.15.25",
        "symfony/var-dumper": "^6.3.0"
    },
    "autoload": {
        "psr-4": {
            "Spekulatius\\PHPCharCombinator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refactor": "rector",
        "lint": "pint",
        "test:refactor": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
